{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "jsx": "react",
        "outDir": "build", //自动生成的
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "removeComments": true,
        "typeRoots": [
            "/hdstypes"
        ]
    },
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules",
        "__tests__"
    ]
}